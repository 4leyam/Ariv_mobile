<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    tools:context=".check.NoResult"
    android:layout_gravity="center"
    >

    <ImageView
        android:id="@+id/doneImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_done_all_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@id/done"
        />

    <TextView
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:text="Terminé"
        android:textSize="25dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@id/doneImage"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/resultImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:src="@drawable/ic_exposure_zero_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/doneImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@id/result"
        />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Résultat"
        android:paddingTop="5dp"
        app:layout_constraintTop_toTopOf="@id/resultImage"
        app:layout_constraintTop_toBottomOf="@id/done"
        app:layout_constraintLeft_toRightOf="@id/resultImage"
        app:layout_constraintEnd_toEndOf="parent"
        />

</android.support.constraint.ConstraintLayout>